<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkipageActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/Skipage"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent" >
    </androidx.viewpager2.widget.ViewPager2>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/Skipage"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textdes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:fontFamily="@font/dinroundedpro_bold"
            android:text="Choose an Avatar for your kids"
            android:textColor="@color/dark"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Grid layout to arrange the avatars -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:columnCount="3"
            android:rowCount="3"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <!-- Avatar 1 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/bunny"
                android:layout_width="90dp"

                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="30dp"

                android:src="@drawable/bunny"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Avatar 2 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/boar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:src="@drawable/boar"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Avatar 3 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/crocs"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:src="@drawable/crocs"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Add more avatars in a similar way -->
            <!-- Avatar 4 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/horse"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/horse"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Avatar 5 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/noah"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:src="@drawable/noah"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Avatar 6 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/lion"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:src="@drawable/lion"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Add remaining avatars -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/moose"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/moose"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/koala"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:src="@drawable/koala"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/penguin"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:src="@drawable/penguin"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tiger"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:src="@drawable/tiger"
                android:background="?attr/selectableItemBackgroundBorderless" />




        </GridLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonchange"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_getstarted"
            android:fontFamily="@font/dinroundedpro_bold"
            android:text="Change"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:backgroundTint="@color/greenlightning" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttoncancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_getstarted"
            android:fontFamily="@font/dinroundedpro_bold"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:backgroundTint="@color/lightred" />

    </LinearLayout>

</RelativeLayout>
