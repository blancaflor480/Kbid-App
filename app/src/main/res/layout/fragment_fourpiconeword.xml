<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_container"
    tools:context=".fragment.biblegames.GamesFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple" />

    <!-- Top section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/purple"
            app:contentPadding="12dp">

            <ImageView
                android:id="@+id/arrowback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:src="@drawable/arrowback" />

            <TextView
                android:id="@+id/textGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Pics 1 Word"
                android:fontFamily="@font/dinroundedpro_bold"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textColor="@android:color/white" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level "
            android:fontFamily="@font/dinroundedpro_bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <!-- Image grid section -->
    <GridLayout
        android:id="@+id/imageGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="120dp"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <!-- Answer boxes and keyboard -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="390dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <!-- Answer Boxes -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/yelloworange"
            app:contentPadding="10dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/answerBoxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <!--<TextView
                    android:id="@+id/answerBox1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_box"
                    android:gravity="center"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/answerBox2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_box"
                    android:gravity="center"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/answerBox3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_box"
                    android:gravity="center"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/answerBox4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_box"
                    android:gravity="center"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@android:color/white" />-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Keyboard Grid -->
        <LinearLayout
            android:id="@+id/enteranswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <GridLayout
                android:id="@+id/keyboardGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:rowCount="2"
                android:columnCount="5"
                android:layout_gravity="center">

                <!-- Row 1 -->
                <Button
                    android:id="@+id/keyboardButton1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text=""
                    android:padding="13dp"
                    android:textSize="18sp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/keyboardButton2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text=""
                    android:padding="13dp"
                    android:textSize="18sp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/keyboardButton3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text=""
                    android:padding="13dp"
                    android:textSize="18sp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/keyboardButton4"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text=""
                    android:padding="13dp"
                    android:textSize="18sp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black" />

                <ImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_answer"
                    android:padding="13dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/lightred"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:src="@drawable/delete_outline"
                    />

                <Button
                    android:id="@+id/keyboardButton5"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text=""
                    android:padding="13dp"
                    android:textSize="18sp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/keyboardButton6"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text=""
                    android:padding="13dp"
                    android:textSize="18sp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/keyboardButton7"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text=""
                    android:padding="13dp"
                    android:textSize="18sp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/keyboardButton8"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text=""
                    android:padding="13dp"
                    android:textSize="18sp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black" />

                <ImageButton
                    android:id="@+id/shuffle"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_answer"
                    android:padding="13dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/green"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/shuffle"
                    />





                <!-- Repeat for other keyboard buttons... -->
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
