<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container"
    tools:context=".fragment.biblegames.GamesFragment">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dirtywhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/blue"
            app:contentPadding="25dp">

            <ImageView
                android:id="@+id/arrowback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:src="@drawable/arrowback"
                />

            <TextView
                android:id="@+id/textGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz Games"
                android:fontFamily="@font/dinroundedpro_bold"
                android:textSize="25sp"
                android:layout_marginLeft="38dp"
                android:textColor="@android:color/white" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:layout_marginTop="110dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/blue"
            app:contentPadding="25dp">


            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question#1"
                android:fontFamily="@font/dinroundedpro_bold"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textColor="@android:color/white" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/dirtywhite"
            app:contentPadding="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
            <Button
                android:id="@+id/answer1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Question#1"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/dinroundedpro_bold"
                android:textSize="25sp"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/answer2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Question#1"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/dinroundedpro_bold"
                android:textSize="25sp"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/answer3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Question#1"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/dinroundedpro_bold"
                android:textSize="25sp"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/answer4"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Question#1"
                android:fontFamily="@font/dinroundedpro_bold"
                android:textSize="25sp"
                android:textColor="@android:color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



    <TextView
        android:id="@+id/not_found_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Not Found"
        android:visibility="gone"
        android:textSize="18sp"
        android:textColor="@color/black" />
</FrameLayout>
