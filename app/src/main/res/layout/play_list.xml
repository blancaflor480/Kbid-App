<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container"
    tools:context=".fragment.biblestories.BibleFragment">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/layer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:background="@color/white"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/white"
                app:contentPadding="10dp"
                android:layout_marginBottom="175dp"

                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/arrowback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/arrowback"
                    android:background="@drawable/shape_arrow"
                    />

                <TextView
                    android:id="@+id/textStories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play List"
                    android:fontFamily="@font/dinroundedpro_bold"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:textColor="#252525" />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="290dp"
                android:layout_height="330dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/centerImage"
                android:layout_marginEnd="8dp"

                >
            <ImageView
                android:id="@+id/leftImage"
                android:layout_width="290dp"
                android:layout_height="353dp"
                android:scaleType="centerCrop"
                android:src="@raw/games"
                 />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="290dp"
                android:layout_height="330dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/centerImage"
                android:layout_marginStart="330dp"
                >

                <ImageView
                    android:id="@+id/rightImage"
                    android:layout_width="300dp"
                    android:layout_height="330dp"
                    android:scaleType="centerCrop"
                    android:src="@raw/music"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/centerImage"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="353dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/leftImage"
            app:layout_constraintEnd_toStartOf="@id/rightImage"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="8dp"
            >
            <ImageView
                android:id="@+id/centerImage"
                android:layout_width="300dp"
                android:layout_height="353dp"
                android:scaleType="centerCrop"
                android:src="@raw/fourpics"
            />
        </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclep"
        android:layout_below="@+id/layer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="350dp" />

    <TextView
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add your favorite!"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/dinroundedpro_bold"
        android:textSize="18sp"
        android:textColor="@color/black" />

</FrameLayout>
