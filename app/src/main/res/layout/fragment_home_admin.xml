<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".ui.home.HomeFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/childage"
        android:layout_width="match_parent"
        android:background="@color/dirtywhite"
        android:layout_height="match_parent" >
    </androidx.viewpager2.widget.ViewPager2>

    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/lightgreenshadow"
        android:padding="26dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsbold"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/header_style"
        android:orientation="horizontal"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Full Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/poppinsbold"/>

            <TextView
                android:id="@+id/userRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userName"
                android:layout_alignParentStart="true"
                android:padding="2dp"
                android:text="Role"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/poppinsmedium"/>

            <TextView
                android:id="@+id/datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userRole"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:textSize="13sp"
                />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:src="@drawable/user" />
    </LinearLayout>

    <!-- Grid Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_below="@id/headerSection"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="110dp">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="10dp"
            android:rowCount="3">

            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:background="@drawable/shape_grid">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/people"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/usercount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/dinpro_regular"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="25sp" />



                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="User Management"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsmedium" />
                          </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:background="@drawable/shape_grid">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/camera_roll"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/contentcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        android:fontFamily="@font/dinpro_regular" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Content Manage"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsmedium" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:padding="15dp"

                android:background="@drawable/shape_grid">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/analytics"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        android:fontFamily="@font/dinpro_regular" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Record"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsmedium" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:padding="15dp"

                android:background="@drawable/shape_grid">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/feedback"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/feedbackcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        android:fontFamily="@font/dinpro_regular" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Feedback"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsmedium" />
            </FrameLayout>



        </GridLayout>
    </LinearLayout>
</RelativeLayout>
