<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F1F1">

    <!-- Top Background -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#C6D860"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageView
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:background="@raw/bg_profile"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
    </FrameLayout>


    <!-- Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Close Button -->
        <ImageButton
            android:id="@+id/close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Profile Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/dinroundedpro_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Profile Frame -->
    <FrameLayout
        android:id="@+id/profileFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <!-- Profile Avatar -->
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="150dp"
            android:layout_height="155dp"
            android:background="@drawable/circle_avatarbg"
            android:scaleType="centerCrop"
            android:src="@drawable/lion" />

        <!-- Change Avatar Button -->

    </FrameLayout>

    <!-- Profile Information -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/profileFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <!-- Name -->
        <TextView
            android:id="@+id/Editname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:fontFamily="@font/dinroundedpro_bold" />

        <!-- Control Number -->
        <TextView
            android:id="@+id/controlnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/dinroundedpro_bold" />
    </LinearLayout>

    <!-- CardView Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/profileFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        app:cardElevation="8dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/editprof"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#D8606E"
                android:layout_marginBottom="20dp">

                <!-- Use LinearLayout for proper horizontal alignment -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="35dp"
                    android:paddingEnd="16dp">

                    <!-- ImageView for the icon -->
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/editprofile"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="Edit Profile Icon" />

                    <!-- TextView for the label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gothamroundedbold"
                        android:textSize="20sp"
                        android:layout_marginStart="16dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#6090D8">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="35dp"
                    android:paddingEnd="16dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/badge"
                        android:layout_gravity="top"
                        android:layout_marginTop="20dp"
                        android:contentDescription="Edit Profile Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progress Badge"
                        android:layout_gravity="top"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/gothamroundedbold"
                        android:textSize="20sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="35dp"
                    android:paddingEnd="16dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/badge"
                        android:layout_gravity="top"
                        android:layout_marginTop="20dp"
                        android:contentDescription="Edit Profile Icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclep"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
