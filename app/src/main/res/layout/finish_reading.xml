<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="20dp">

    <!-- Using LinearLayout to vertically align elements -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Lottie Animation View -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/successful"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/finish"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- TextView with the submission message -->
        <TextView
            android:id="@+id/submission_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations you \nare completed!"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/gothamroundedbold"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />

        <!-- AppCompatButton positioned below the TextView -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_done"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/shadow3dbutton"
            android:fontFamily="@font/gothamroundedbold"
            android:text="Done"
            android:textSize="13sp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
