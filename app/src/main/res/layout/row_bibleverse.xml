<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/listingbible"
    app:cardUseCompatPadding="true"
    android:padding="12dp"
    >

            <LinearLayout
                android:id="@+id/layer1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="301dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:cardCornerRadius="30dp"
                   >

                    <ImageView
                        android:id="@+id/thumbnailp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="center"

                        >

                    </ImageView>
                    <androidx.cardview.widget.CardView
                        id="@+id/navigate"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="230dp"
                        android:backgroundTint="@color/white"
                        app:cardElevation="10dp">
                        <TextView
                            android:id="@+id/titlep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bible Stories"
                            android:fontFamily="@font/dinroundedpro_bold"
                            android:textSize="15sp"
                            android:textColor="@color/dark"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:layout_marginBottom="10dp"
                            android:padding="5dp"/>
                        <TextView
                            android:id="@+id/versep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bible Stories"
                            android:fontFamily="@font/dinroundedpro_regular"
                            android:textSize="11sp"
                            android:textColor="@color/dark"
                            android:layout_gravity="center"
                            android:layout_marginTop="13dp"
                            android:padding="5dp"/>




                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


</RelativeLayout>
