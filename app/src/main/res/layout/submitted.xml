<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/sucessful"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/successfully"
            android:layout_centerHorizontal="true"/>

        <!-- Add TextView below the LottieAnimationView with constraints -->
        <TextView
            android:id="@+id/submission_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submitted Successfully!"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/gothamroundedbold"
            android:layout_gravity="center"
            android:layout_marginTop="58dp" /> <!-- Add some margin for spacing -->

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
