<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".AdminDashboard">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/childage"
        android:layout_width="match_parent"
        android:background="@color/dirtywhite"
        android:layout_height="match_parent" >
    </androidx.viewpager2.widget.ViewPager2>
    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/blue"
        android:padding="26dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K-BID APP"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/dinroundedpro_bold"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/header_style"
        android:orientation="horizontal"

        android:padding="16dp">

        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="130dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Jade Ryan Blancaflor"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="@font/dinroundedpro_bold"/>

            <TextView
                android:id="@+id/userRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userName"
                android:layout_alignParentStart="true"
                android:padding="2dp"
                android:text="Super Admin"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:fontFamily="@font/dinpro_regular"/>

            <Button
                android:id="@+id/editProfileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userRole"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/dangrek"
                android:textColor="@android:color/white"
                android:text="Edit Profile" />
        </RelativeLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:src="@drawable/user" />

    </LinearLayout>


    <!-- Grid Section -->
   <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerSection"
        android:layout_marginTop="130dp"
        android:columnCount="2"
        android:rowCount="3"

        android:layout_gravity="center"
        android:background="@color/white">


       <FrameLayout
           android:layout_width="50dp"
           android:layout_height="150dp"
           android:layout_rowWeight="1"
           android:layout_columnWeight="1"
           android:layout_margin="10dp"
           android:background="@drawable/shape_grid"
           />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_grid" />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_grid" />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_grid" />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_grid" />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_grid" />
    </GridLayout>

</RelativeLayout>
