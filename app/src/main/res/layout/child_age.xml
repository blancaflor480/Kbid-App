<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChildAgeActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/childage"
        android:layout_width="match_parent"
        android:background="@color/dirtywhite"
        android:layout_height="match_parent" >
    </androidx.viewpager2.widget.ViewPager2>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/childage"
        android:layout_centerInParent="true"

        android:background="@color/dirtywhite"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageclip"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/textdes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:fontFamily="@font/dinroundedpro_regular"
            android:text="How old is your child?"
            android:textColor="@color/dark"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textdesc"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/dinroundedpro_regular"
            android:text="Weâ€™ll personalized the experience for this age"
            android:textColor="@color/darkmin"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            >
            <EditText
                android:id="@+id/inputAge"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/rounded_input_name"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/dinroundedpro_regular"
                android:inputType="number"
                android:padding="15dp"
                android:hint="Age"
                android:textColorHint="@color/darkmin"
                android:textColor="@color/darkmin"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonContinue"

        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#38BD6C"
        android:fontFamily="@font/dinroundedpro_bold"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>
</RelativeLayout>
