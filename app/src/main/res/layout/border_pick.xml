<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkipageActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/Skipage"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent" >
    </androidx.viewpager2.widget.ViewPager2>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/Skipage"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textdes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/dinroundedpro_bold"
                android:text="Choose your border"
                android:textColor="@color/dark"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/about"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tutorial"
                android:background="@drawable/askwhatisborder"
                android:layout_marginEnd="16dp"/>

        </LinearLayout>

        <!-- Grid layout to arrange the avatars -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:columnCount="3"
            android:rowCount="6"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <!-- Avatar 1 with label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/bronze"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/bronze"
                    android:background="?attr/selectableItemBackgroundBorderless" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Covenant"
                    android:textColor="@color/dark"
                    android:textSize="16sp"
                    android:fontFamily="@font/dinroundedpro_bold"/>
            </LinearLayout>

            <!-- Avatar 2 with label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/silver"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/silver"
                    android:background="?attr/selectableItemBackgroundBorderless" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shekinah"
                    android:textColor="@color/dark"
                    android:textSize="16sp"
                    android:fontFamily="@font/dinroundedpro_bold"/>
            </LinearLayout>

            <!-- Avatar 3 with label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/angelblue"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/angelblue"
                    android:background="?attr/selectableItemBackgroundBorderless" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zion"
                    android:textColor="@color/dark"
                    android:textSize="16sp"
                    android:fontFamily="@font/dinroundedpro_bold"/>
            </LinearLayout>

            <!-- Avatar 4 with label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/angelpink"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/angelpink"
                    android:background="?attr/selectableItemBackgroundBorderless" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elohim"
                    android:textColor="@color/dark"
                    android:textSize="16sp"
                    android:fontFamily="@font/dinroundedpro_bold"/>
            </LinearLayout>

            <!-- Avatar 5 with label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/angelrainbow"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/angelrainbow"
                    android:background="?attr/selectableItemBackgroundBorderless" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promise"
                    android:textColor="@color/dark"
                    android:textSize="16sp"
                    android:fontFamily="@font/dinroundedpro_bold"/>
            </LinearLayout>

            <!-- Avatar 6 with label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/angelskyblue"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/angelskyblue"
                    android:background="?attr/selectableItemBackgroundBorderless" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Celestine"
                    android:textColor="@color/dark"
                    android:textSize="16sp"
                    android:fontFamily="@font/dinroundedpro_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/angelgold"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/angelgold"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eden"
                    android:textColor="@color/dark"
                    android:textSize="16sp"
                    android:fontFamily="@font/dinroundedpro_bold"/>
            </LinearLayout>
            <!-- Avatar 7 with label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/exclusive"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/exclusive"
                    android:background="?attr/selectableItemBackgroundBorderless" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Christmas"
                    android:textColor="@color/dark"
                    android:textSize="16sp"
                    android:fontFamily="@font/dinroundedpro_bold"/>
            </LinearLayout>

            <!-- Hidden avatars with labels -->


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">
                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/penguin"
                    android:background="?attr/selectableItemBackgroundBorderless" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penguin"
                    android:textColor="@color/dark"
                    android:textSize="16sp"
                    android:fontFamily="@font/dinroundedpro_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/tiger"
                    android:background="?attr/selectableItemBackgroundBorderless" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiger"
                    android:textColor="@color/dark"
                    android:textSize="16sp"
                    android:fontFamily="@font/dinroundedpro_bold"/>
            </LinearLayout>

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonchange"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_getstarted"
            android:fontFamily="@font/dinroundedpro_bold"
            android:text="Equip"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:backgroundTint="@color/greenlightning" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttoncancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_getstarted"
            android:fontFamily="@font/dinroundedpro_bold"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:backgroundTint="@color/lightred" />

    </LinearLayout>

</RelativeLayout>