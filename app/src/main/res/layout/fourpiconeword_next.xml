<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_container"
    tools:context=".fragment.biblegames.GamesFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple" />

    <!-- Top section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/purple"
            app:contentPadding="12dp">

            <ImageView
                android:id="@+id/arrowback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:src="@drawable/arrowback" />

            <TextView
                android:id="@+id/textGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Pics 1 Word"
                android:fontFamily="@font/dinroundedpro_bold"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textColor="@android:color/white" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <!-- Image grid section -->

    <LinearLayout
        android:id="@+id/imageGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="vertical"> <!-- Set orientation to vertical -->

        <TextView
            android:id="@+id/Great"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Great"
            android:fontFamily="@font/dinroundedpro_bold"
            android:textSize="50sp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp" /> <!-- Use bottom margin for space below the TextView -->

        <ImageView
            android:id="@+id/picture1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/baseline_star_24" />
    </LinearLayout>

    <!-- Answer boxes and keyboard -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="390dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <!-- Answer Boxes -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/yelloworange"
            app:contentPadding="10dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/answerBoxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <!--<TextView
                    android:id="@+id/answerBox1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_box"
                    android:gravity="center"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/answerBox2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_box"
                    android:gravity="center"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/answerBox3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_box"
                    android:gravity="center"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/answerBox4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_box"
                    android:gravity="center"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@android:color/white" />-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Next"
            android:textSize="20sp"

            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_gravity="center"
            android:clickable="true"
            >
        </Button>

        <!-- Keyboard Grid -->

    </LinearLayout>
</RelativeLayout>
