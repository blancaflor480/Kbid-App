<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listingbible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cardborder"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    tools:context=".ui.user.UserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/thumbnailp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/image"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titlep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/dinroundedpro_bold"
                android:text="Title Story"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/versep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dinroundedpro_medium"
                android:text="Verse"
                android:padding="3dp"
                android:textColor="#892424"
                android:textSize="11sp" />


        </LinearLayout>
        <!--<ImageView
            android:id="@+id/play"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_play_circle_24"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />-->
    </LinearLayout>

</androidx.cardview.widget.CardView>