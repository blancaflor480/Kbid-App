<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChildNameActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/childname"
        android:layout_width="match_parent"
        android:background="@color/dirtywhite"
        android:layout_height="match_parent" >
    </androidx.viewpager2.widget.ViewPager2>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/childname"
        android:layout_centerInParent="true"

        android:background="@color/dirtywhite"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageclip"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/textdes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:fontFamily="@font/dinroundedpro_bold"
            android:text="What is your child’s name?"
            android:textColor="@color/purple"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textdesc"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/dinroundedpro_regular"
            android:text="They’ll learn how to write it themselves!"
            android:textColor="@color/darkmin"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_input_name"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/dinroundedpro_bold"
            android:inputType="text"
            android:padding="15dp"
            android:hint="Name"
            android:textColorHint="@color/darkmin"
            android:textColor="@color/darkmin"
            android:textSize="25sp" />
    </LinearLayout>

<Button
    android:id="@+id/buttonContinue"
    style="@style/BottomNavigationViewIconSize"
    android:layout_width="350dp"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="20dp"
    android:backgroundTint="#6F34EE"
    android:fontFamily="@font/dangrek"
    android:text="Continue"
    android:textColor="@android:color/white"
    android:textSize="20sp"/>
    </RelativeLayout>
