<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/childname"
        android:layout_width="match_parent"
        android:background="@color/dirtywhite"
        android:layout_height="match_parent"
        >

    </androidx.viewpager2.widget.ViewPager2>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:padding="16dp"
            android:background="@color/dirtywhite">

            <ImageView
                android:id="@+id/imageclip"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                />
            <!--android:src="@drawable/your_image_stories"-->

            <TextView
                android:id="@+id/textdes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is your child’s name?"
                android:textStyle="bold"
                android:textSize="22sp"
                android:fontFamily="@font/dinroundedpro_bold"
                android:textColor="@color/purple"
                android:layout_alignParentStart="true"
                android:layout_marginStart="65dp" />
            <TextView
                android:id="@+id/textdesc"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:text="They’ll learn how to write it themselves!"
                android:fontFamily="@font/dinroundedpro_regular"
                android:textSize="18sp"
                android:textColor="@color/darkmin"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"/>
            <EditText
                android:id="@+id/inputName"
                android:layout_width="380dp"
                android:layout_height="70dp"
                android:ems="10"
                android:inputType="text"
                android:text="Name"
                android:textColor="@color/darkmin"
                android:padding="20dp"
                android:textSize="25sp"
                android:fontFamily="@font/dinroundedpro_bold"
                android:background="@drawable/rounded_input_name"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
              </RelativeLayout>




    <Button
        android:id="@+id/buttonContinue"
        style="@style/ContinueButton"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#6F34EE"
        android:fontFamily="@font/dangrek"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/rounded_corner_background"/>
</RelativeLayout>