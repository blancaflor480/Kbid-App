<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E0A0">

    <!-- Background Image with Alpha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:background="@raw/fourpicblur"
        android:orientation="vertical">

        <!-- Title Bar Layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <!-- Back Arrow Icon -->
            <ImageView
                android:id="@+id/arrowback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/left_arrow"
                android:background="@drawable/shape_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Title TextView Centered -->
            <TextView
                android:id="@+id/textStories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOUR BIBLE CLUES"
                android:fontFamily="@font/dinroundedpro_bold"
                android:textSize="25sp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/arrowback"
                app:layout_constraintEnd_toEndOf="parent"
                 />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" A Bible-themed guessing game where kids use four images as clues to identify a story or character from the Bible."
            android:fontFamily="@font/dinroundedpro_medium"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="15dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/arrowback"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp" />
    </LinearLayout>
    <!-- Centered Play and How to Play Buttons -->
    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/poppinsextrabold"

        android:padding="15dp"
        android:text="LEVEL 1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <!-- Play Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/play"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="PLAY"
            android:textSize="25sp"
            android:fontFamily="@font/dinroundedpro_bold"
            android:background="@drawable/btnplaybackground"
            android:backgroundTint="@null"
            android:textColor="@color/white"
           />


        <!-- How to Play Icon -->
        <ImageButton
            android:id="@+id/howtoplay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/question"
            android:background="@drawable/btnhwplaybackground"
            android:contentDescription="How to Play"
            android:layout_marginStart="15dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
