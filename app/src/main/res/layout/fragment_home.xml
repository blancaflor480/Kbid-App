<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragment.FragmentHome">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <!-- Curved Background at the Top -->
    <View
        android:id="@+id/curvedTop"
        android:layout_width="550dp"
        android:layout_height="180dp"
        android:background="@drawable/curved_bg"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloudgif"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="@id/curvedTop"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/cloudgifright"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="55dp"
        android:rotationY="180"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/curvedTop" />

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/curvedTop"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp">

        <!-- Name TextView -->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dinroundedpro_bold"
            android:text="Hello, Name"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp" />

        <!-- Welcome TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dinroundedpro_medium"
            android:text="Welcome KbidApp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="55dp"
            android:layout_marginStart="20dp" />

        <!-- Notification Section (aligned to the end) -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="32dp"
            android:visibility="gone">

            <!-- Notification Button -->
            <ImageButton
                android:id="@+id/notif"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/notif" />

            <!-- Notification Indicator -->
            <View
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/indicator_notif"
                android:layout_alignEnd="@id/notif"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp" />

            <!-- Notification Count -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dinroundedpro_bold"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_alignEnd="@id/notif"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="0dp" />
        </RelativeLayout>
    </RelativeLayout>


    <!-- FrameLayout with Profile Image inside -->
    <FrameLayout
        android:id="@+id/profileFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/curvedTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-75dp"> <!-- Negative margin to slightly overlap the curve -->

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/circle_avatarbg"
            android:scaleType="centerCrop"
            android:src="@drawable/lion"
            />

        <LinearLayout
            android:id="@+id/editprofile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/circle_editprofile"
            android:visibility="gone"
            >

            <!-- Centered Pencil Icon -->
            <ImageView
                android:id="@+id/changeinfo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@raw/pencil"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />

            <!-- Text directly below the Pencil Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:fontFamily="@font/dinroundedpro_bold"
                android:gravity="center"
                android:layout_marginTop="5dp" />
        </LinearLayout>

    </FrameLayout>

    <!-- Scrollable Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profileFrame"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="15dp">

            <!--LAYER 1 -->
            <LinearLayout
                android:id="@+id/layer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/clickStories"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:background="@raw/story2"
                        android:scaleType="center"
                        android:alpha="0.6" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STORY"
                        android:fontFamily="@font/dinroundedpro_bold"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:layout_gravity="center" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--LAYER 2 -->
            <LinearLayout
                android:id="@+id/layer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/clickGames"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:background="@raw/story2"
                        android:scaleType="center"
                        android:alpha="0.6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GAMES"
                        android:fontFamily="@font/dinroundedpro_bold"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:layout_gravity="center" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--LAYER 3 -->
            <LinearLayout
                android:id="@+id/layer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:background="@raw/story2"
                        android:scaleType="center"
                        android:alpha="0.6" />

                    <TextView
                        android:id="@+id/clickMusic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MUSIC"
                        android:fontFamily="@font/dinroundedpro_bold"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:layout_gravity="center" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
