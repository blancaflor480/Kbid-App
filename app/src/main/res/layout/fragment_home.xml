<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".fragment.FragmentHome">

    <!-- TODO: Update blank fragment layout -->


    <include layout="@layout/videobg" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        >

        <TextView
            android:id="@+id/texttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:fontFamily="@font/titanone_regular"
            android:text="Welcome to Kidâ€™s Bible"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="265dp"
            android:src="@raw/clipartjesus"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"

            >

        </ImageView>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/home_rounded"
            android:layout_marginTop="235dp"
            android:padding="16dp">


<LinearLayout
    android:id="@+id/layer1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="30dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/imageempty"
                    android:scaleType="center"

                    >

                </ImageView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="180dp"
                    android:backgroundTint="@color/white">
                    <TextView
                        android:id="@+id/clickStories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BIBLE STORIES"
                        android:fontFamily="@font/dangrek"
                        android:textSize="20sp"
                        android:textColor="@color/dark"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"/>


                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


</LinearLayout>

            <LinearLayout
                android:id="@+id/layer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="13dp"
                    app:cardCornerRadius="20dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:background="@drawable/imageempty"
                        android:scaleType="center"

                        >

                    </ImageView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        android:layout_marginTop="180dp"
                        android:backgroundTint="@color/white">
                        <TextView
                            android:id="@+id/clickGames"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GAMES"
                            android:fontFamily="@font/dangrek"
                            android:textSize="20sp"
                            android:textColor="@color/dark"
                            android:layout_marginBottom="5dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:padding="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Click"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_alignParentBottom="true" />
                        <!--          android:id="@+id/clickStories"-->

                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="280dp"
                    app:cardCornerRadius="20dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:background="@drawable/imageempty"
                        android:scaleType="center"

                        >

                    </ImageView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        android:layout_marginTop="180dp"
                        android:backgroundTint="@color/white">
                        <TextView
                            android:id="@+id/songvideo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MUSIC AND VIDEO"
                            android:fontFamily="@font/dangrek"
                            android:textSize="20sp"
                            android:textColor="@color/dark"
                            android:layout_marginBottom="5dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:padding="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Click"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_alignParentBottom="true" />
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
