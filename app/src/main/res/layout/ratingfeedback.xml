<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">

        <ImageButton
            android:id="@+id/close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/close"
            android:layout_gravity="end" /> <!-- Aligns to the right end -->
    </FrameLayout>

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/gothamroundedbold" />



        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="How would you rate your expereince?"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/gothamroundedmedium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"

            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/rating1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/rating_blank" />

            <ImageView
                android:id="@+id/rating2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/rating_blank" />

            <ImageView
                android:id="@+id/rating3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/rating_blank" />

            <ImageView
                android:id="@+id/rating4"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:src="@drawable/rating_blank" />

            <ImageView
                android:id="@+id/rating5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/rating_blank" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Please click on stars to select your \ndesired rating."
            android:textSize="15sp"
            android:textColor="@color/darkmin"
            android:fontFamily="@font/gothamroundedmedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Comment(optional)"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/gothamroundedmedium" />

        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/rounded_answergray"
            android:layout_margin="10dp"
            android:textColorHint="@color/darkmin"
            android:fontFamily="@font/gothamroundedmedium"
            android:textSize="15sp"
            android:hint="Type your comment here..."
            android:gravity="top"
            android:padding="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sendfeedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Send Feedback"
            android:fontFamily="@font/gothamroundedmedium"
            android:background="@drawable/shadow3dbutton"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>
