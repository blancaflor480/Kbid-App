<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:id="@+id/views">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Answer Reflection"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/close"
                android:contentDescription="Close" />
        </LinearLayout>



        <TextView
            android:id="@+id/textVieww"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/devotelid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Devotional ID: "
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/rounded_input_name"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            />
        <TextView
            android:id="@+id/memoryverse"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Memory Verse: "
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/rounded_input_name"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp"
            />
        <TextView
            android:id="@+id/verse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verse: "
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/rounded_input_name"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/controlid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Control ID user: "
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/rounded_input_name"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>


        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/rounded_input_name"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />
        <TextView
            android:id="@+id/reflectionanswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reflection Answer: "
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/rounded_input_name"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />


    </LinearLayout>
</ScrollView>
